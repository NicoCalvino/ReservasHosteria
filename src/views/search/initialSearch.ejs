<%- include('../partials/header',{hojaDeEstilo:"/css/stylesBookings.css"}) %>
<div class="hero" id="reserva-timbre">
    <div class="container">
        <div class="main-heading">
            <h1 class="title-res">Reservá tu habitación</h1>
            <div class="nc-booking-block">
                <form action="/roomSelection" class="form" method="GET">
                    <div class="input-group">
                        <label for="check-in" class="input-label">Entrada</label>
                        <input type="date" class="input" id="check-in" name="check_in" <%=locals.oldInfo && oldInfo.check_in ? "value=" + oldInfo.check_in : '' %>>
                        <% if(locals.errors && errors.check_in){ %>
                            <div class="nc-error-block">
                                <label class="nc-error-message"><%= errors.check_in.msg %></label>   
                            </div>
                        <% } %>
                    </div>
                    <div class="input-group">
                        <label for="check-out" class="input-label">Salida</label>
                        <input type="date" class="input" id="check-out"  name="check_out" <%=locals.oldInfo && oldInfo.check_out ? "value=" + oldInfo.check_out : '' %>>
                        <% if(locals.errors && errors.check_out){ %>
                            <div class="nc-error-block">
                                <label class="nc-error-message"><%= errors.check_out.msg %></label>   
                            </div>
                        <% } %>
                    </div>
                    <div class="input-group">
                        <label for="people" class="input-label">Huespedes</label>
                        <input type="number" class="input" id="people" name="people" min="0" <%=locals.oldInfo && oldInfo.people ? "value=" + oldInfo.people : '' %>>
                        <% if(locals.errors && errors.people){ %>
                            <div class="nc-error-block">
                                <label class="nc-error-message"><%= errors.people.msg %></label>   
                            </div>
                        <% } %>
                    </div>
                    <div class="input-group">
                        <label for="check-out" class="input-label">Habitaciones</label>
                        <input type="number" class="input" id="rooms" name="rooms" min="0" max="14" <%=locals.oldInfo && oldInfo.rooms ? "value=" + oldInfo.rooms : '' %>>
                        <% if(locals.errors && errors.rooms){ %>
                            <div class="nc-error-block">
                                <label class="nc-error-message"><%= errors.rooms.msg %></label>   
                            </div>
                        <% } %>
                    </div>
                    <div class="nc-button-block">
                        <label><i class="fas fa-search"></i></label>
                        <input class="btn btn-gradient nc-btn-extra" type="submit" value="CONSULTAR">
                    </div>
                </form>
            </div>
        </div>
        <div class="nc-payment-link-block">
            <span class="nc-payment-message">Para informar el pago de una seña, hacer click <a href="/paymentUpload">AQUI</a></span>
        </div>
    </div>
</div>
<section class="booking">
</section>
</main>
<%- include('../partials/footer') %>